@model Message

<div class="w-75">
    <h2>Post a Message</h2>
    <form asp-action="CreateMessage" asp-controller="Message" method="post">
        <div>
            <span asp-validation-for="MessageText" class="text-danger"></span>
            <textarea asp-for="MessageText" id="MessageText" cols="128" rows="5" class="p-2"></textarea>
        </div>
        <div class="d-flex justify-content-end">
            <button class="btn btn-success rounded">Post</button>
        </div>
    </form>
</div>